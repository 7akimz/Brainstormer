= f.hidden_field :team_id
.group
  = f.label :name, t("activerecord.attributes.event.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: Team Meeting
.group
  = f.label :description, t("activerecord.attributes.event.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area'
  %span.description Ex: They will discuss the new project
.group
  = f.label :start_at, t("activerecord.attributes.event.start_at", :default => "Start at"), :class => :label
  = f.datetime_select :start_at, :class => 'datetime_select'
.group
  = f.label :end_at, t("activerecord.attributes.event.end_at", :default => "End at"), :class => :label
  = f.datetime_select :end_at, :class => 'datetime_select'
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), team_events_path, :class => "text_button_padding link_button"
