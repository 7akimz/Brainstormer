.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", project_tasks_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_project_task_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_project_task_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Task
    .inner
      = form_for @task, :url => project_task_path(@task), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
