.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", team_events_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_team_event_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", team_event_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.team_event.team_id", :default => t("activerecord.labels.team_id", :default => "Team"))
          \:
        = @event.team_id
      %p
        %b
          = t("activerecord.attributes.team_event.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @event.name
      %p
        %b
          = t("activerecord.attributes.team_event.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @event.description
      %p
        %b
          = t("activerecord.attributes.team_event.start_at", :default => t("activerecord.labels.start_at", :default => "Start at"))
          \:
        = @event.start_at
      %p
        %b
          = t("activerecord.attributes.team_event.end_at", :default => t("activerecord.labels.end_at", :default => "End at"))
          \:
        = @event.end_at
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_team_event_path(@event), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), team_event_path(@event), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
