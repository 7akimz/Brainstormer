- if user_signed_in?
  %table.front
    %tr
      %td.main
        %h1.post Any new idea?
        = render 'shared/post_form'
        = render 'shared/feed'
        .sidebar
          = render 'shared/user_info'
          = render 'shared/status'
- else
  %h1 Welcome to Brainstormer

  %p Enjoy the social website

  = link_to "Sign up!", new_user_registration_path
