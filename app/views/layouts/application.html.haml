!!!
%html
  %head
    %title Brainstormer
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    - unless notice.blank?
      .notice
        = notice
    - unless alert.blank?
      .alert
        = alert
    %nav
      %ul
        %li=link_to "Projects"
        %li=link_to "tobe"
        - if user_signed_in?
          %li=link_to "Logout", destory_user_session_path
        - else
          %li=link_to "Login", new_user_session_path
    = yield

