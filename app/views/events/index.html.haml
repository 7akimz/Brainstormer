.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", team_events_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_team_event_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Events
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.team_event.team_id", :default => t("activerecord.labels.team_id", :default => "Team_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @events.each do |event|
          %tr{:class => cycle("odd", "even")}
            %td
              = event.id
            %td
              = link_to event.name, team_event_path(@team, event)
            %td
              = event.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", team_event_path(@team, event)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_team_event_path(@team, event)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", team_event_path(@team, event), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
