%tr
  %td.post
    %span.content= post.content
    %span.timestamp Posted #{time_ago_in_words(post.created_at)} ago.
  - if same_user?(post.user)
    %td 
      = link_to "delete", post, :method => :delete, |
                                :confirm => "Are you sure?", |
                                :title => post.content |
